<%- model_class = Database -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:port) %></th>
      <th><%= model_class.human_attribute_name(:db_type) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @databases.each do |database| %>
      <tr>
        <td><%= link_to database.name, database_path(database) %></td>
        <td><%= database.port %></td>
        <td><%= database.db_type %></td>
        <td><%= database.version %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_database_path(database), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      database_path(database),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_database_path,
            :class => 'btn btn-primary' %>
