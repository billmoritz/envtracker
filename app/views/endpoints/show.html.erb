<%- model_class = Endpoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<% application = Application.find(@endpoint.application_id) %>
<% environment = Environment.find(@endpoint.environment_id) %>
<% schema = Schema.find(@endpoint.schema_id) %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @endpoint.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
  <dd><%= @endpoint.version %></dd>
  <dt><strong><%= model_class.human_attribute_name(:application_id) %>:</strong></dt>
  <dd><%= link_to application.name, application_path(application.id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:environment_id) %>:</strong></dt>
  <dd><%= link_to environment.name, environment_path(environment.id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:schema_id) %>:</strong></dt>
  <dd><%= link_to schema.name, schema_path(schema.id) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              endpoints_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_endpoint_path(@endpoint), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              endpoint_path(@endpoint),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
