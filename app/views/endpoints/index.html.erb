<%- model_class = Endpoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:application_id) %></th>
      <th><%= model_class.human_attribute_name(:environment_id) %></th>
      <th><%= model_class.human_attribute_name(:schema_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @endpoints.each do |endpoint| %>
      <% application = Application.find(endpoint.application_id) %>
      <% environment = Environment.find(endpoint.environment_id) %>
      <% schema = Schema.find(endpoint.schema_id) %>
      <tr>
        <td><%= link_to endpoint.name, endpoint_path(endpoint) %></td>
        <td><%= endpoint.version %></td>
        <td><%= link_to application.name, application_path(application) %></td>
        <td><%= link_to environment.name, environment_path(environment) %></td>
        <td><%= link_to schema.name, schema_path(schema) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_endpoint_path(endpoint), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      endpoint_path(endpoint),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_endpoint_path,
            :class => 'btn btn-primary' %>
