<%- model_class = Application -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:source) %></th>
      <th><%= model_class.human_attribute_name(:prod_mgr) %></th>
      <th><%= model_class.human_attribute_name(:lead_eng) %></th>
      <th><%= model_class.human_attribute_name(:test) %></th>
      <th><%= model_class.human_attribute_name(:test_result) %></th>
      <th><%= model_class.human_attribute_name(:config) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= link_to application.id, application_path(application) %></td>
        <td><%= application.name %></td>
        <td><%= application.source %></td>
        <td><%= application.prod_mgr %></td>
        <td><%= application.lead_eng %></td>
        <td><%= application.test %></td>
        <td><%= application.test_result %></td>
        <td><%= application.config %></td>
        <td><%= application.notes %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_application_path(application), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      application_path(application),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_application_path,
            :class => 'btn btn-primary' %>
