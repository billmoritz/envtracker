<%= form_for @application, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :source, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :source, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :prod_mgr, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :prod_mgr, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lead_eng, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lead_eng, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :test, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :test, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :test_result, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :test_result, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :config, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :config, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applications_path, :class => 'btn' %>
  </div>
<% end %>
