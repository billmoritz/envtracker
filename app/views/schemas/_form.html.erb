<%= form_for @schema, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :database_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:database_id, Database.all.collect {|d| [ d.name, d.id ] }, {:prompt => false}) %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                schemas_path, :class => 'btn' %>
  </div>
<% end %>
